.content{
 width: 100%;
 height: 100%;
background-color:  darkgray;
display:flex;
/* flex-flow 容器内元素自动换行并且居中对齐 */
flex-flow:  wrap;

justify-content: space-around;
}
.imageTop{
  width:  100%;
  height:  400rpx;
  display:  flex;
}
.layoutGroup{
  width: 100%;
  height: 100%;
  background-color:  blueviolet;
  display:  flex;
  flex-direction:  row;
  justify-content:  space-around;
}
.layout{
  width: auto;
  height: 100%;
  display:  flex;
  flex-direction: column;
  flex-wrap:  wrap;
}
.noteItem{
  width:  auto;
  height: auto;
  display:  flex;
  flex-direction:  row;
  justify-content:  flex-end;
}
.switchLayout{
  background-color: 
   coral;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  width: 100%;
  height: 100rpx;
  display: flex;
flex-wrap:  nowrap;
  justify-content: space-between;
}
.itemLayout{
  display:  flex;
  flex-direction:  column;
  justify-content:  center;
}
.HiddenLayout{
  background-color: 
     burlywood;
  height: 200rpx;
  margin-top: 0rpx;
  margin-bottom: 0rpx;
  display: flex;
flex-wrap:  nowrap;
  justify-content: space-between;
}
